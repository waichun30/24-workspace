<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.tool.entity.ProductMapper">

    <resultMap id="ProductDO" type="com.center.tool.entity.model.ProductDO">
        <result column="product_code" property="productCode"/>
        <result column="merchant_code" property="merchantCode"/>
        <result column="product_name" property="productName"/>
        <result column="product_img_path" property="productImgPath"/>
        <result column="product_description" property="productDescription"/>
        <result column="product_currency" property="productCurrency"/>
        <result column="product_amount" property="productAmount"/>
        <result column="product_status" property="productStatus"/>
        <result column="product_type" property="productType"/>
        <result column="created_time" property="createdTime"/>
        <result column="modified_time" property="modifiedTime"/>
        <result column="extend_info" property="extendInfo"/>
    </resultMap>


    <select id="getProductDoByProductCode" parameterType="String" resultMap="ProductDO">
        SELECT
            *
        FROM
            product
        WHERE
            product_code = #{productCode}
    </select>

    <select id="getProductDoByMerchantCode" parameterType="String" resultMap="ProductDO">
        SELECT
            *
        FROM
            product
        WHERE
            merchant_code = #{merchantCode}
    </select>

    <select id="getProductDoByMerchantCodeAndType" parameterType="String" resultMap="ProductDO">
        SELECT
            *
        FROM
            product
        WHERE
            merchant_code = #{merchantCode}
            AND
            product_type = #{productType}
    </select>

</mapper>